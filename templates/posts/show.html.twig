{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <p>{{ post.body }}</p>
   
    <a href="{{ path('blog_post_edit', {'id': post.id}) }}"><button class="btn btn-success">Edit</button></a>
    <a href="{{ path('blog_post_delete', {'id': post.id}) }}"><button class="btn btn-danger">Delete</button></a>
    <p>
    {{ form_start(form) }}
     {{ form_row(form.comment, { 'attr': {
        'placeholder': 'Your comment here...'} }) }}
         <button type="submit" class="btn btn-primary">Submit</button>
{{ form_end(form) }}</p>
<hr><p><b>Comments:</b></p>
    
      {%  for comment in post.comments %}
   
     
        {% if comment.comment %}
        <p class="comment"> <i class="text-muted">
        {{ comment.createdAt|date("Y-m-d") }}</i><br>
        {{ comment.comment }}</p> 
       
         {% endif %}
      
     {% endfor %}
      {% if post.comments|length < 2 %}  
      <p class="text-muted">Comments not found...</p>
       {% endif %}

   </div>

   
{% endblock %}
